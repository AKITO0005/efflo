  <!-- Mobile Menu Overlay -->
  <div class="menu-overlay" id="menu-overlay">
    <a href="#" class="menu-link" onclick="closeMenu(); location.reload();">TOP</a>
    <a href="efflo_diagnosis_final.html" class="menu-link">CHECK MODE</a>
    <a href="#" class="menu-link" onclick="closeMenu()">ABOUT</a>
  </div>

  <!-- Hero Section -->
  <section class="hero">
    <div class="copy-container">
      <div class="main-copy">感情は、<br>着飾る時代だ。</div>
      <div class="sub-copy">Wear Your Emotions.</div>
      <!-- メインの診断ボタン -->
      <a href="efflo_diagnosis_final.html" class="hero-check-btn">CHECK MODE</a>
    </div>

    <!-- Icons Grid (Dynamic Generation) -->
    <div class="icons-grid" id="icons-container">
      <!-- JSでアイコンを生成 -->
    </div>
  </section>

  <!-- Detail Modal -->
  <div class="modal-overlay" id="modal">
    <div class="modal-card" onclick="event.stopPropagation()">
      <div class="close-btn" onclick="closeModal()">×</div>
      <img id="m-img" src="" class="modal-img">
      <h2 id="m-title" class="modal-title">HYPE</h2>
      <div id="m-jp" class="modal-jp">積極</div>
      <p id="m-desc" class="modal-desc">解説文</p>
    </div>
  </div>

  <script>
    /* 感情データ */
    const emotions = [
      { id: "HYPE", jp: "積極", image: "efflo-01.png", desc: "エネルギーが溢れ、周囲を巻き込むポジティブな状態。\nリーダーシップを発揮できるタイミング。" },
      { id: "FLOW", jp: "集中", image: "efflo-02.png", desc: "一点に深く没入している状態。\n高い生産性を発揮するが、話しかけられたくないかも。" },
      { id: "LIKE", jp: "共感", image: "efflo-03.png", desc: "他者の意見を受け入れ、感動している状態。\n素晴らしい聞き手になれる。" },
      { id: "SPARK", jp: "驚き", image: "efflo-04.png", desc: "新しい発見やアイデアに衝撃を受けている状態。\nパラダイムシフトの瞬間。" },
      { id: "EDGE", jp: "緊張", image: "efflo-05.png", desc: "プレッシャーを感じているが、やる気はある崖っぷちの状態。\n良いパフォーマンスの予兆。" },
      { id: "MELT", jp: "消耗", image: "efflo-06.png", desc: "エネルギーが枯渇し、思考が溶け出している状態。\n休息か、単純作業が必要。" },
      { id: "ERROR", jp: "不調", image: "efflo-07.png", desc: "意欲はあるが、状況が整理できずフリーズしている状態。\n情報の整理が必要。" }
    ];

    const container = document.getElementById('icons-container');

    // アイコンを生成してアニメーション表示
    emotions.forEach((emo, index) => {
      const div = document.createElement('div');
      div.className = 'icon-item';
      
      // アイコン + 診断ボタン（詳細表示）
      div.innerHTML = `
        <img src="${emo.image}" alt="${emo.id}" class="icon-img">
        <div class="check-label">CHECK</div>
      `;
      
      // クリックイベント
      div.onclick = () => openModal(emo);

      container.appendChild(div);

      // じわじわ表示するアニメーション (Staggered Animation)
      // 遅延時間: キャッチコピー表示(1.5s) + インデックス * 0.15s
      setTimeout(() => {
        div.style.opacity = '1';
        div.style.transform = 'translateY(0)';
      }, 1500 + (index * 150));
    });

    // モーダル制御
    const modal = document.getElementById('modal');
    const modalCard = modal.querySelector('.modal-card');

    function openModal(emo) {
      document.getElementById('m-img').src = emo.image;
      document.getElementById('m-title').innerText = emo.id;
      document.getElementById('m-jp').innerText = emo.jp;
      document.getElementById('m-desc').innerText = emo.desc;

      modal.style.display = 'flex';
      // 少し遅らせてフェードイン
      setTimeout(() => {
        modal.style.opacity = '1';
        modalCard.style.transform = 'scale(1)';
      }, 10);
    }

    function closeModal() {
      modal.style.opacity = '0';
      modalCard.style.transform = 'scale(0.9)';
      setTimeout(() => {
        modal.style.display = 'none';
      }, 300);
    }

    // 背景クリックで閉じる
    modal.onclick = closeModal;

    // ハンバーガーメニュー制御
    function toggleMenu() {
      const burger = document.querySelector('.hamburger');
      const menu = document.getElementById('menu-overlay');
      burger.classList.toggle('open');
      menu.classList.toggle('open');
    }

    function closeMenu() {
      const burger = document.querySelector('.hamburger');
      const menu = document.getElementById('menu-overlay');
      burger.classList.remove('open');
      menu.classList.remove('open');
    }

  </script>
</body>
</html>
